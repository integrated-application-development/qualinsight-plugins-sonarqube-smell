<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.qualinsight.plugins.sonarqube</groupId>
    <artifactId>qualinsight-plugins-sonarqube-smell</artifactId>
    <version>4.1.0</version>
  </parent>
  <artifactId>qualinsight-plugins-sonarqube-smell-plugin</artifactId>
  <description>Allows developers to programmatically report code smells usually not seen by SonarQube but which should be taken into consideration when evaluating a project's technical debt. Usage &lt;a href="https://github.com/QualInsight/qualinsight-plugins-sonarqube-smell#code-smells-plugin-for-sonarqube"&gt;documentation&lt;/a&gt; is available on the project's Homepage.</description>
  <packaging>sonar-plugin</packaging>
  <properties>
    <!-- Plugin versions -->
    <plugin.maven-dependency-plugin.version>2.10</plugin.maven-dependency-plugin.version>
    <plugin.sonar-packaging-maven-plugin.version>1.23.0.740</plugin.sonar-packaging-maven-plugin.version>
    <!-- Libraries versions -->
    <lib.sonar-plugin-api.version>5.6</lib.sonar-plugin-api.version>
    <lib.sonar-java-plugin.version>4.4.0.8066</lib.sonar-java-plugin.version>
    <lib.java-checks-testkit.version>4.4.0.8066</lib.java-checks-testkit.version>
    <lib.sslr-squid-bridge.version>2.6.1</lib.sslr-squid-bridge.version>
    <lib.guava.version>19.0</lib.guava.version>
    <lib.gson.version>2.8.0</lib.gson.version>
    <lib.commons-lang.version>2.6</lib.commons-lang.version>
    <lib.commons-io.version>2.4</lib.commons-io.version>
    <lib.slf4j-api.version>1.7.21</lib.slf4j-api.version>
    <lib.logback-classic.version>1.1.3</lib.logback-classic.version>
    <lib.junitparams.version>1.0.4</lib.junitparams.version>
    <lib.assertj-core.version>3.6.1</lib.assertj-core.version>
    <lib.junit.version>4.11</lib.junit.version>
    <lib.mockito-all.version>1.10.19</lib.mockito-all.version>
    <lib.jcip-annotations.version>1.0-1</lib.jcip-annotations.version>
    <lib.fest-assert.version>1.4</lib.fest-assert.version>
  </properties>
  <dependencies>
    <dependency>
      <groupId>com.qualinsight.plugins.sonarqube</groupId>
      <artifactId>qualinsight-plugins-sonarqube-smell-api</artifactId>
      <version>${project.version}</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.sonarsource.sonarqube</groupId>
      <artifactId>sonar-plugin-api</artifactId>
      <version>${lib.sonar-plugin-api.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.sonarsource.sslr-squid-bridge</groupId>
      <artifactId>sslr-squid-bridge</artifactId>
      <version>${lib.sslr-squid-bridge.version}</version>
      <scope>compile</scope>
      <exclusions>
        <exclusion>
          <groupId>com.google.guava</groupId>
          <artifactId>guava</artifactId>
        </exclusion>
        <exclusion>
          <groupId>org.slf4j</groupId>
          <artifactId>slf4j-api</artifactId>
        </exclusion>
        <exclusion>
          <groupId>commons-lang</groupId>
          <artifactId>commons-lang</artifactId>
        </exclusion>
        <exclusion>
          <groupId>commons-io</groupId>
          <artifactId>commons-io</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.sonarsource.java</groupId>
      <artifactId>sonar-java-plugin</artifactId>
      <version>${lib.sonar-java-plugin.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.sonarsource.java</groupId>
      <artifactId>java-checks-testkit</artifactId>
      <version>${lib.java-checks-testkit.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>${lib.slf4j-api.version}</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>ch.qos.logback</groupId>
      <artifactId>logback-classic</artifactId>
      <version>${lib.logback-classic.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>commons-lang</groupId>
      <artifactId>commons-lang</artifactId>
      <version>${lib.commons-lang.version}</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>commons-io</groupId>
      <artifactId>commons-io</artifactId>
      <version>${lib.commons-io.version}</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>${lib.junit.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.assertj</groupId>
      <artifactId>assertj-core</artifactId>
      <version>${lib.assertj-core.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>pl.pragmatists</groupId>
      <artifactId>JUnitParams</artifactId>
      <version>${lib.junitparams.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.mockito</groupId>
      <artifactId>mockito-all</artifactId>
      <version>${lib.mockito-all.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.google.guava</groupId>
      <artifactId>guava</artifactId>
      <version>${lib.guava.version}</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.google.code.gson</groupId>
      <artifactId>gson</artifactId>
      <version>${lib.gson.version}</version>
    </dependency>
    <dependency>
      <groupId>com.github.stephenc.jcip</groupId>
      <artifactId>jcip-annotations</artifactId>
      <version>${lib.jcip-annotations.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.easytesting</groupId>
      <artifactId>fest-assert</artifactId>
      <version>${lib.fest-assert.version}</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>${plugin.maven-dependency-plugin.version}</version>
        <executions>
          <execution>
            <id>copy</id>
            <phase>test-compile</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>com.qualinsight.plugins.sonarqube</groupId>
                  <artifactId>qualinsight-plugins-sonarqube-smell-api</artifactId>
                  <version>${project.version}</version>
                  <type>jar</type>
                </artifactItem>
              </artifactItems>
              <outputDirectory>${project.build.directory}/test-jars</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.sonarsource.sonar-packaging-maven-plugin</groupId>
        <artifactId>sonar-packaging-maven-plugin</artifactId>
        <version>${plugin.sonar-packaging-maven-plugin.version}</version>
        <extensions>true</extensions>
        <configuration>
          <pluginClass>com.qualinsight.plugins.sonarqube.smell.plugin.SmellPlugin</pluginClass>
          <pluginKey>smells</pluginKey>
          <pluginName>Code Smells</pluginName>
          <finalName>qualinsight-sonarqube-smell-plugin-${project.version}</finalName>
          <pluginDescription />
          <pluginTermsConditionsUrl>https://www.gnu.org/licenses/lgpl-3.0.txt</pluginTermsConditionsUrl>
          <pluginUrl>https://github.com/QualInsight/qualinsight-plugins-sonarqube-smell/</pluginUrl>
          <requirePlugins>java:4.4</requirePlugins>
          <requiredForLanguages>java</requiredForLanguages>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
